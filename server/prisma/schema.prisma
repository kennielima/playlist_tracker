generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id                  String     @id @default(uuid())
  email               String     @unique
  name                String?
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  playlists           Playlist[]
  spotifyId           String?    @unique
  spotifyaccessToken  String?
  spotifyrefreshToken String?
  tokenExpiry         Int?
  userImage           String?
  Snapshot            Snapshot[]

  @@map("Users")
}

model Playlist {
  id                String     @id @default(uuid())
  name              String
  description       String
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  tracks            Track[]
  Snapshot          Snapshot[]
  isTracked         Boolean    @default(false)
  isTrackedBy       String?
  trackingStartDate DateTime?
  User              User?      @relation(fields: [userId], references: [id])
  userId            String?
  image             String
  url               String
  playlistId        String     @unique
  snapshotId        String

  @@map("Playlists")
}

model Snapshot {
  id         String          @id @default(uuid())
  playlist   Playlist        @relation(fields: [playlistId], references: [playlistId])
  playlistId String
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  // tracks     Track[]
  tracks     SnapshotTrack[]
  user       User            @relation(fields: [userId], references: [id])
  userId     String

  @@map("Snapshot")
}

model Track {
  id             String          @id @default(uuid())
  artists        String[]
  name           String
  album          String?
  imageUrl       String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  Playlist       Playlist        @relation(fields: [playlistId], references: [playlistId])
  playlistId     String
  // rank       Int
  // Snapshot   Snapshot? @relation(fields: [snapshotId], references: [id])
  // snapshotId String?
  snapshotTracks SnapshotTrack[]

  @@map("Tracks")
}

model SnapshotTrack {
  id         String   @id @default(uuid())
  rank       Int
  snapshot   Snapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
  snapshotId String
  track      Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  trackId    String
  createdAt  DateTime @default(now())

  @@unique([snapshotId, trackId])
  @@map("SnapshotTracks")
}
